<link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.css" />
<script src="http://code.jquery.com/mobile/1.3.1/jquery.mobile-1.3.1.min.js"></script>

<div data-role="page" id="fullhead" data-theme="b">
	<div data-role="header" data-position="fixed" data-theme="a">
		<h1>Fullsink Audio</h1>
	</div>
	
	<div data-role="content">
		<ul id="pick" data-role="listview" data-theme="c" data-inset="false">
		</ul>
	</div>
	
	<div data-role="content">
		<table style='width:100%'><tr><td>
			<input type="search" name="username" id="userhandle" value="" placeholder="User Name">
			</td>
	    <td style='font-size:80%; width:7em'>
				<a id="refresh" href="#" data-role="button">Refresh</a>
	 		</td>
		</tr></table>
	</div>
	
	
	<div data-role="footer" data-position="fixed" class="ui-bar" data-theme="c">
		<div class="ui-grid-solo">
			<div class="ui-block-a">
				<audio id="media" src="" style="width:80%" preload="auto" controls >
				<p>Your browser does not support the audio element.</p>
				</audio>
			</div>
		</div>
		
		<div class="ui-grid-a">
			<div class="ui-block-a" style="width:45%">
					<button id="playbut" data-icon="arrow-r" data-theme="a">Play</button>
			</div>
			<!--
			<div class="ui-block-b">
				tyle="float: right; margin-right: 25px;"
				</div>
			-->
			<div class="ui-block-b" style="width:45%; float: right; margin-right: 30px;">
				<button id="copybut" data-icon="arrow-d" data-theme="a" >Download</button>
			</div>	   
		</div>
		
	</div>
	
</div>

<% if Rails.env.production? %>
<% 	url =  "http://www.fullsink.com" %>
<% else %>
<% url = "http://192.168.1.104:3000" %>
<% end %>

<!-- common.js should be loaded first -->
<%= javascript_tag(render :template => "layouts/common", :formats => [:js]) %>
<%= javascript_tag(render :template => "layouts/client", :formats => [:js],
	:locals => {:url => url}) %>

		
		